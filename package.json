{
  "name": "reward-preview",
  "version": "1.0.0",
  "description": "BUILD Reward Calculator - Vesting Sandbox with on-chain logic",
  "type": "module",
  "scripts": {
    "dev:frontend": "vite --config frontend/vite.config.js",
    "dev:backend": "cross-env NODE_ENV=development nodemon backend/src/server.js",
    "local:dev": "concurrently -k -raw -n backend,frontend -c blue,green \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "start": "node backend/src/server.js",
    "start:prod": "cross-env NODE_ENV=production node backend/src/server.js",
    "local:prod": "cross-env NODE_ENV=local-production pnpm build && cross-env NODE_ENV=local-production pnpm start",
    "prebuild": "node scripts/encrypt-secrets.js",
    "build": "cross-env NODE_ENV=production vite build --config frontend/vite.config.js",
    "pm2:start": "cross-env NODE_ENV=production pm2 start backend/src/server.js --name reward-preview",
    "pm2:restart": "pm2 restart reward-preview",
    "pm2:stop": "pm2 stop reward-preview",
    "pm2:logs": "pm2 logs reward-preview"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "javascript-obfuscator": "^5.1.0",
    "nodemon": "^3.1.11",
    "vite": "^7.3.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-javascript-obfuscator": "^3.1.0"
  },
  "dependencies": {
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.9.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "ethers": "^6.16.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "mathjs": "^15.1.0",
    "msgpackr": "^1.11.5",
    "react": "^19.2.3",
    "react-countup": "^6.5.3",
    "react-dom": "^19.2.3",
    "rimraf": "^6.1.2",
    "swr": "^2.3.7",
    "terser": "^5.44.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.26.0"
}
